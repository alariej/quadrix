{
  "name": "quadrix",
  "productName": "quadrix.chat",
  "private": true,
  "main": "index.js",
  "version": "0.2.5",
  "description": "Minimal, simple, multi-platform chat app for the Matrix protocol",
  "author": "Jean-Fran√ßois Alarie <alariej@quadrix.chat>",
  "homepage": "https://quadrix.chat",
  "scripts": {
    "rn-cli": "node scripts/react-native.js",
    "start:rn-dev": "npm run rn-cli -- start --reset-cache",
    "start:android": "npm run rn-cli -- run-android",
    "start:ios": "npm run rn-cli -- run-ios",
    "start:web": "cross-env platform=web webpack serve --config=web/webpack/dev.js --progress --mode=development --host 0.0.0.0",
    "build:web": "cross-env platform=web webpack --config=web/webpack/prod.js --progress --mode=production",
    "start:electron": "electron .",
    "build:snap": "electron-builder --linux snap --config builder-snap.json",
    "build:snap:arm": "electron-builder --linux snap --arm64 --config builder-snap.json",
    "build:deb": "electron-builder --linux deb --config builder-snap.json",
    "build:mas": "node ./scripts/packager-mas.js",
    "sign:mas:dev": "electron-osx-sign dist-mac/quadrix.chat-mas-x64/quadrix.chat.app --identity='Apple Development' --provisioning-profile=macos_alarie_dev.provisionprofile --entitlements=macos/entitlements.mas.plist --type=development",
    "sign:mas:prod": "electron-osx-sign dist-mac/quadrix.chat-mas-x64/quadrix.chat.app --identity='Apple Distribution' --provisioning-profile=macos_alarie.provisionprofile --entitlements=macos/entitlements.mas.plist --type=distribution",
    "build:pkg": "electron-osx-flat dist-mac/quadrix.chat-mas-x64/quadrix.chat.app --identity='3rd Party Mac Developer Installer' --verbose",
    "build:appx": "electron-builder --win appx --config builder-win.json",
    "build:exe": "electron-builder --win nsis --config builder-win.json",
    "lint": "eslint --config .eslintrc --ext .ts,.tsx src"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-decorators": "^7.14.5",
    "@babel/preset-env": "^7.15.0",
    "@react-native-community/cli": "4.14.0",
    "@types/linkifyjs": "^2.1.4",
    "@types/react": "16.14.6",
    "@types/react-native": "0.63.4",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "babel-loader": "^8.2.2",
    "compression-webpack-plugin": "^8.0.1",
    "cross-env": "^7.0.3",
    "electron": "^13.2.1",
    "electron-builder": "^22.11.7",
    "electron-packager": "^15.3.0",
    "electron-packager-languages": "^0.5.0",
    "eslint": "^7.32.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-reactxp": "^0.1.14",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.3.2",
    "html-webpack-plugin": "^5.3.2",
    "metro-react-native-babel-preset": "0.66.2",
    "typescript": "^4.3.5",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.0.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "1.15.5",
    "@react-native-community/netinfo": "5.0.0",
    "@react-native-firebase/app": "12.4.0",
    "@react-native-firebase/messaging": "12.4.0",
    "axios": "0.21.1",
    "better-react-spinkit": "^2.0.4",
    "date-fns": "2.23.0",
    "linkifyjs": "2.1.9",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-image-file-resizer": "0.4.7",
    "react-native": "0.63.4",
    "react-native-animated-spinkit": "^1.5.2",
    "react-native-document-picker": "5.2.0",
    "react-native-image-picker": "4.0.6",
    "react-native-image-resizer": "1.4.5",
    "react-native-jitsi-meet": "github:alariej/react-native-jitsi-meet",
    "react-native-share": "7.0.0",
    "react-native-svg": "12.1.1",
    "react-native-webview": "11.13.0",
    "reactxp": "github:alariej/reactxp",
    "reactxp-imagesvg": "github:alariej/reactxp-imagesvg",
    "reactxp-netinfo": "github:alariej/reactxp-netinfo",
    "reactxp-virtuallistview": "github:alariej/reactxp-virtuallistview",
    "resub": "2.3.0",
    "rn-fetch-blob": "github:alariej/rn-fetch-blob",
    "simplerestclients": "1.0.0"
  },
  "notes": {
    "@react-native-community/cli": "version 5+ requires RN version 0.64+",
    "@react-native-async-storage/async-storage": "version must match dependency in reactxp",
    "@react-native-community/netinfo_1": "versions higher than 5.0.0 crash react-native-jitsi-meet",
    "@react-native-community/netinfo_2": "version must match dependency in reactxp-netinfo",
    "react-native-svg": "version must match dependency in reactxp-imagesvg",
    "react-native-document-picker": "breaking change in 6.0.3, TODO"
  }
}
