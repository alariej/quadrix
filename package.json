{
  "name": "quadrix",
  "private": false,
  "main": "index.js",
  "version": "0.1.0-a.1",
  "scripts": {
    "rn-cli": "node scripts/react-native.js",
    "start:rn-dev": "npm run rn-cli -- start --reset-cache",
    "start:android": "npm run rn-cli -- run-android",
    "start:ios": "npm run rn-cli -- run-ios",
    "start:web": "cross-env platform=web webpack serve --config=web/webpack/dev.js --progress --mode=development --host 0.0.0.0",
    "build:web": "cross-env platform=web webpack --config=web/webpack/prod.js --progress --mode=production",
    "start:electron": "electron .",
    "build:package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=dist-web/resources/images/logo.icns --prune=true --out=dist-web/mac-release-builds",
    "build:package-win": "electron-packager . quadrix --overwrite --asar=true --platform=win32 --arch=ia32 --icon=dist-web/resources/images/logo.ico --prune=true --out=dist-web/win-release-builds --version-string.CompanyName=quadrix --version-string.FileDescription=quadrix --version-string.ProductName=\"quadrix.chat\"",
    "build:package-linux": "electron-packager . quadrix --overwrite --asar=true --platform=linux --arch=x64 --icon=dist-web/resources/images/logo.png --prune=true --out=dist-web/linux-release-builds",
    "build:installer-debian": "electron-installer-debian --src dist-web/linux-release-builds/quadrix-linux-x64/ --arch amd64 --config debian.json",
    "build:installer-snap": "electron-installer-snap --src=dist-web/linux-release-builds/quadrix-linux-x64/",
    "lint": "eslint --config .eslintrc --ext .ts,.tsx src"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-proposal-decorators": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@react-native-community/cli": "4.14.0",
    "@types/linkifyjs": "^2.1.3",
    "@types/react": "16.14.6",
    "@types/react-native": "0.63.4",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "babel-loader": "^8.2.2",
    "compression-webpack-plugin": "^8.0.1",
    "cross-env": "^7.0.3",
    "electron": "^13.1.4",
    "electron-packager": "^15.2.0",
    "eslint": "^7.29.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-reactxp": "^0.1.14",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.2.12",
    "html-webpack-plugin": "^5.3.2",
    "metro-react-native-babel-preset": "0.66.0",
    "typescript": "^4.3.4",
    "webpack": "^5.41.1",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "1.15.5",
    "@react-native-community/netinfo": "5.0.0",
    "@react-native-firebase/app": "12.1.0",
    "@react-native-firebase/messaging": "12.1.0",
    "axios": "0.21.1",
    "date-fns": "2.22.1",
    "linkifyjs": "2.1.9",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-image-file-resizer": "0.4.7",
    "react-native": "0.63.4",
    "react-native-document-picker": "5.2.0",
    "react-native-image-resizer": "1.4.5",
    "react-native-jitsi-meet": "github:alariej/react-native-jitsi-meet",
    "react-native-share": "6.2.1",
    "react-native-svg": "12.1.1",
    "react-native-webview": "11.6.4",
    "react-native-windows": "0.63.24",
    "reactxp": "github:alariej/reactxp",
    "reactxp-imagesvg": "github:alariej/reactxp-imagesvg",
    "reactxp-netinfo": "github:alariej/reactxp-netinfo",
    "reactxp-virtuallistview": "github:alariej/reactxp-virtuallistview",
    "resub": "2.3.0",
    "rn-fetch-blob": "github:alariej/rn-fetch-blob",
    "simplerestclients": "1.0.0"
  },
  "notes": {
    "@react-native-community/cli": "version 5+ requires RN version 0.64+",
    "@react-native-async-storage/async-storage": "version must match dependency in reactxp",
    "@react-native-community/netinfo_1": "versions higher than 5.0.0 crash react-native-jitsi-meet",
    "@react-native-community/netinfo_2": "version must match dependency in reactxp-netinfo",
    "react-native-svg": "version must match dependency in reactxp-imagesvg"
  }
}
